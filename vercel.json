{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/tts.py": {
      "runtime": "python3.12",
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
